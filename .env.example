# FitApp Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# ============================================
# Bot Configuration
# ============================================
BOT_USERNAME=fitness_motivator
BOT_PASSWORD=your_bot_password_here

# ============================================
# Database Configuration
# ============================================
MONGO_URI=mongodb://mongoosedb:27017/fitapp
# For local development: mongodb://localhost:27017/fitapp

# ============================================
# Matrix/Chat Configuration
# ============================================
MATRIX_HOMESERVER_URL=http://synapse:8008
# For local development: http://localhost:8008
MATRIX_SERVER_NAME=fitapp.local

# ============================================
# Backend API Configuration
# ============================================
# Used by bot to communicate with backend
BACKEND_API_URL=http://backend:3000
# For local development: http://localhost:3000
# For production: https://fitappbackend.herringm.com

# ============================================
# Google OAuth (Backend)
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://fitapp.herringm.com/api/auth/google/callback

# ============================================
# Push Notifications (Backend)
# ============================================
# Generate these using: node fitapp-backend/scripts/generate-vapid-keys.js
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ============================================
# Frontend Environment Variables
# ============================================
# These are set in docker-compose.yml for the frontend service
# VITE_API_URL=https://fitappbackend.herringm.com
# VITE_MATRIX_URL=http://synapse:8008

# ============================================
# Node Environment
# ============================================
NODE_ENV=development
# Use 'production' for production deployments
