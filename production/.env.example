# Production Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Node Environment
NODE_ENV=production

# Database Configuration
MONGO_URI=mongodb://mongoosedb:27017/fitapp

# Bot Configuration
BOT_USERNAME=fitness_motivator
BOT_PASSWORD=your_production_bot_password_here

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
# Navigate to: APIs & Services → Credentials → OAuth 2.0 Client IDs
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback

# Matrix/Chat Configuration
MATRIX_HOMESERVER_URL=http://synapse:8008
MATRIX_SERVER_NAME=fitapp.local

# Push Notifications (VAPID Keys)
# Generate these using: node fitapp-backend/scripts/generate-vapid-keys.js
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Fitbit OAuth Configuration
# Get these from Fitbit Developer Portal: https://dev.fitbit.com/apps
# Navigate to: Manage → Register an App
# Application Type: Server
# Callback URL: https://your-backend-domain.com/api/auth/fitbit/callback
# Required Scopes: activity, weight, profile
FITBIT_CLIENT_ID=your_fitbit_client_id_here
FITBIT_CLIENT_SECRET=your_fitbit_client_secret_here
FITBIT_REDIRECT_URI=https://your-backend-domain.com/api/auth/fitbit/callback

# Frontend Environment Variables
VITE_API_URL=https://your-backend-domain.com
VITE_MATRIX_URL=http://synapse:8008
